pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv'
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    // Create the virtual environment
                    sh "python -m venv ${VIRTUAL_ENV}"

                    // Activate the virtual environment and install dependencies
                    if (isUnix()) {
                        sh "source ${VIRTUAL_ENV}/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
                    } else {
                        bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pip install --upgrade pip && pip install -r requirements.txt"
                    }
                }
            }
        }
        stage('Lint') {
            steps {
                script {
                    if (isUnix()) {
                        sh "source ${VIRTUAL_ENV}/bin/activate && flake8 app.py"
                    } else {
                        bat "call ${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    if (isUnix()) {
                        sh "source ${VIRTUAL_ENV}/bin/activate && pytest"
                    } else {
                        bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pytest"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
